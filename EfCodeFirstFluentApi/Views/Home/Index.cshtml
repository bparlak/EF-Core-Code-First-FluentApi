@model List<Customer>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">EntityFramework Core Code First FluentApi</h1>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <ul class="list-group-item">
                        <li class="list-group-item active">@item.FirstName</li>
                        <li class="list-group-item">@item.SecondName </li>
                        <li class="list-group-item">@item.UserName </li>
                        <li class="list-group-item">@item.Email </li>
                        <li class="list-group-item">@item.Age </li>
                        <li class="list-group-item">@item.City</li>
                        <li class="list-group-item">@item.Country</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="mt-5 mb-5">
        <p class="text-center">
            To setup database use code <br />
            dotnet ef database update
        </p>
    </div>
    <p> <a href="http://burakparlak.com" target="_blank">Learn about me</a>.</p>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>
